# for Multimedia keys
bindsym XF86AudioLowerVolume exec amixer -q set Master 5- && exec notify-send -t 10 -u low -c "Music" "$(amixer get Master | grep 'Playback [0-9][0-9]')"
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5+ && exec notify-send -t 10 -u low -c "Music" "$(amixer get Master | grep 'Playback [0-9][0-9]')"
bindsym XF86AudioMute exec $(amixer get Master | grep off > /dev/null && amixer -q set Master unmute) || amixer -q set Master mute
bindsym XF86AudioPrev exec cmus-remote -r && exec notify-send -t 10 -u normal "$(cmus-remote -Q)"
bindsym XF86AudioNext exec cmus-remote -n && exec notify-send -t 10 -u normal "$(cmus-remote -Q)"

#bindsym XF86AudioPause exec cmus-remote -u && exec notify-send -t 10 -u normal "$(cmus-remote -Q)" && exec xdotool search --name Youtube key shift+j
bindsym XF86AudioPause exec xdotool search --name Youtube key shift+j && exec cmus-remote -u && exec notify-send -t 10 -u normal "$(cmus-remote -Q)" 
#bindsym XF86AudioPause exec xdotool search --name Youtube key shift+j
# xdotool search --name Youtube key shift+j


